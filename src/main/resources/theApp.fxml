<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="content" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.appController">
   <children>
      <BorderPane fx:id="borderPane">
         <left>
            <VBox prefHeight="560.0" prefWidth="200.0" spacing="20.0" styleClass="sideBar" stylesheets="@style.css" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="home" mnemonicParsing="false" onAction="#switchScreen" prefHeight="25.0" prefWidth="150.0" styleClass="menuButton" stylesheets="@style.css" text="Home" textFill="#edf5e1">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
                  <Button fx:id="food" mnemonicParsing="false" onAction="#switchScreen" prefHeight="25.0" prefWidth="150.0" styleClass="menuButton" stylesheets="@style.css" text="Food" textFill="#edf5e1">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="leaderboard" mnemonicParsing="false" onAction="#switchScreen" prefHeight="25.0" prefWidth="150.0" styleClass="menuButton" stylesheets="@style.css" text="Leaderboard" textFill="#edf5e1">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="avatar" mnemonicParsing="false" onAction="#switchScreen" prefHeight="25.0" prefWidth="150.0" styleClass="menuButton" stylesheets="@style.css" text="Avatar" textFill="#edf5e1">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
               </padding>
            </VBox>
         </left>
         <top>
            <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="800.0" spacing="5.0" styleClass="topBar" stylesheets="@style.css" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="signout" mnemonicParsing="false" onAction="#handle_logout" prefHeight="30.0" prefWidth="93.0" styleClass="topButton" stylesheets="@style.css" text="Sign out" textFill="#05386b">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="TOP" maxHeight="-Infinity" mnemonicParsing="false" onAction="#minimize" prefHeight="30.0" prefWidth="70.0" styleClass="topButton" stylesheets="@style.css" text="Minimize" textFill="#05386b" />
                  <Button fx:id="exit" alignment="CENTER" contentDisplay="TOP" maxHeight="-Infinity" mnemonicParsing="false" onAction="#closeProgram" prefHeight="30.0" prefWidth="50.0" stylesheets="@style.css" text="Exit" textFill="#05386b">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <styleClass>
                        <String fx:value="exit" />
                        <String fx:value="topButton" />
                     </styleClass>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <Pane fx:id="basePane" styleClass="appMenu" stylesheets="@style.css" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
