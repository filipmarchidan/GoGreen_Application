<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="content" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.appController">
   <children>
      <BorderPane fx:id="borderPane">
         <left>
            <VBox prefHeight="560.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #05386B;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="home" mnemonicParsing="false" onAction="#switchScreen" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #379683;" styleClass="buttons" stylesheets="@style.css" text="Home" textFill="WHITE" />
                  <Button fx:id="food" mnemonicParsing="false" onAction="#switchScreen" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #379683;" styleClass="buttons" stylesheets="@style.css" text="Food" textFill="WHITE" />
                  <Button fx:id="leaderboard" mnemonicParsing="false" onAction="#switchScreen" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #379683;" styleClass="buttons" stylesheets="@style.css" text="Leaderboard" textFill="WHITE" />
                  <Button fx:id="avatar" mnemonicParsing="false" onAction="#switchScreen" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #379683;" styleClass="buttons" stylesheets="@style.css" text="Avatars" textFill="WHITE" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
               </padding>
            </VBox>
         </left>
         <top>
            <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#handle_logout" prefHeight="30.0" prefWidth="93.0" style="-fx-background-color: #05386B;" styleClass="buttons" stylesheets="@style.css" text="Sign out" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="exit" alignment="CENTER" contentDisplay="TOP" maxHeight="-Infinity" mnemonicParsing="false" onAction="#closeProgram" prefHeight="30.0" prefWidth="50.0" style="-fx-background-color: #05386B;" styleClass="buttons" stylesheets="@style.css" text="Exit" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <Pane fx:id="basePane" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
